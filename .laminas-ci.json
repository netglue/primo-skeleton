{
    "extensions": [
        "mbstring, curl, json, intl, apcu, pcov"
    ],
    "ini": [
        "apc.enabled=1",
        "apc.enable_cli=1",
        "apc.use_request_time=0",
        "pcov.enabled=1"
    ],
    "additional_checks": [
        {
            "name": "Coverage",
            "job": {
                "command": "vendor/bin/phpunit --coverage-clover coverage.xml"
            }
        }
    ],
    "ignore_php_platform_requirements": {
        "8.1": true
    }
}
