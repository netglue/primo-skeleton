{
    "General": {
        "title": {
            "type": "StructuredText",
            "config": {
                "label": "Error Title",
                "single": "heading1",
                "useAsTitle": true
            }
        },
        "description": {
            "type": "StructuredText",
            "config": {
                "label": "Error Description",
                "placeholder": "This description helps you leave notes and information about the page",
                "multi": "Array"
            }
        },
        "errorCode": {
            "type": "Number",
            "config": {
                "label": "HTTP Error Code",
                "placeholder": "ie 404",
                "min": 300,
                "max": 599
            }
        }
    },
    "Content": {
        "body": {
            "type": "Slices",
            "fieldset": "Document Body",
            "config": {
                "choices": {
                    "prose": {
                        "type": "Slice",
                        "fieldset": "Standard Prose",
                        "description": "A regular block of written content",
                        "icon": "text_fields",
                        "non-repeat": {
                            "content": {
                                "type": "StructuredText",
                                "config": {
                                    "label": "Your words",
                                    "multi": "em,embed,heading1,heading2,heading3,heading4,heading5,heading6,hyperlink,image,list-item,o-list-item,paragraph,preformatted,rtl,strong",
                                    "allowTargetBlank": true,
                                    "labels": [
                                        "code",
                                        "quote"
                                    ]
                                }
                            }
                        }
                    },
                    "header-illustration": {
                        "type": "Slice",
                        "fieldset": "Illustration Header",
                        "description": "An illustration with a header text",
                        "icon": "vertical_split",
                        "non-repeat": {
                            "title": {
                                "type": "StructuredText",
                                "config": {
                                    "label": "Your words",
                                    "single": "em,heading1,heading2,strong"
                                }
                            },
                            "lead": {
                                "type": "StructuredText",
                                "config": {
                                    "label": "Lead Text",
                                    "single": "paragraph"
                                }
                            },
                            "image": {
                                "type": "Image",
                                "config": {
                                    "label": "Illustration",
                                    "constraint": {
                                        "width": 800,
                                        "height": 800
                                    }
                                }
                            }
                        }
                    },
                    "prose-float": {
                        "type": "Slice",
                        "fieldset": "Rich Text + Image",
                        "description": "2 Column Alternating Layout",
                        "icon": "vertical_split",
                        "repeat": {
                            "content": {
                                "type": "StructuredText",
                                "config": {
                                    "label": "Your words",
                                    "multi": "em,heading1,heading2,heading3,heading4,heading5,heading6,hyperlink,list-item,o-list-item,paragraph,preformatted,rtl,strong"
                                }
                            },
                            "image": {
                                "type": "Image",
                                "config": {
                                    "label": "Illustration",
                                    "constraint": {
                                        "width": 800,
                                        "height": 800
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "SEO": {
        "uid": {
            "type": "UID",
            "config": {
                "label": "URL",
                "placeholder": "Provide a unique url for this type of document"
            }
        },
        "meta-title": {
            "type": "Text",
            "config": {
                "label": "Browser Title",
                "placeholder": "Provide a title for search engines"
            }
        },
        "meta-description": {
            "type": "Text",
            "config": {
                "label": "Search Engine Description",
                "placeholder": "The page description shows up search results"
            }
        },
        "robots": {
            "type": "Select",
            "config": {
                "label": "Search Engines",
                "placeholder": "Choose an indexing strategy",
                "options": [
                    "index,follow",
                    "index,nofollow",
                    "noindex,follow",
                    "noindex,nofollow"
                ],
                "default_value": "index,follow"
            }
        },
        "sitemap": {
            "type": "Boolean",
            "config": {
                "label": "Include in Sitemap?",
                "placeholder_false": "Exclude",
                "placeholder_true": "Include",
                "default_value": true
            }
        },
        "priority": {
            "type": "Number",
            "config": {
                "label": "Sitemap Priority",
                "placeholder": "1-100",
                "min": 1,
                "max": 100
            }
        },
        "search": {
            "type": "Boolean",
            "config": {
                "label": "Include in site search?",
                "placeholder_false": "Exclude",
                "placeholder_true": "Include",
                "default_value": true
            }
        }
    }
}